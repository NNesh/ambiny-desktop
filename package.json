{
  "name": "ambiny",
  "version": "0.6.1",
  "description": "An ambilight client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:main": "cross-env NODE_ENV=development npm run build:main && electron --inspect=5858 --remote-debugging-port=9223 ./dist/main.js",
    "start:renderer": "cross-env NODE_ENV=development webpack serve --config build/webpack.config.renderer.js",
    "build:renderer": "webpack --config build/webpack.config.renderer.js",
    "build:preload": "webpack --config build/webpack.config.preload.js",
    "build:main": "npm run build:preload && webpack --config build/webpack.config.main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:production": "cross-env NODE_ENV=production npm run build",
    "pack": "npm run build:production && electron-builder --dir",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild -f -w serialport",
    "postinstall": "npm run rebuild"
  },
  "repository": "",
  "keywords": [
    "Electron",
    "Ambilight"
  ],
  "author": "Ruslan Mullayanov",
  "license": "CC0-1.0",
  "build": {
    "appId": "ru.app.ambiny",
    "productName": "Ambiny",
    "directories": {
      "buildResources": "assets/images",
      "output": "out"
    },
    "files": [
      {
        "from": "dist",
        "filter": [
          "**/*"
        ]
      },
      "!node_modules/**/*",
      "node_modules/{serialport,@serialport,debug,ms,bindings,file-uri-to-path}/**/*",
      "assets/**/*",
      "package.json"
    ],
    "linux": {
      "category": "Recorder"
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": true,
    "npmRebuild": false
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@types/lodash": "^4.14.167",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/serialport": "^8.0.1",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.4",
    "html-webpack-plugin": "^4.5.1",
    "less": "^4.1.0",
    "less-loader": "^7.2.1",
    "memoize-one": "^5.1.1",
    "mini-css-extract-plugin": "^1.3.3",
    "ts-loader": "^8.0.14",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "webpack": "^5.12.3",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@types/react-intl": "^3.0.0",
    "bootstrap": "^4.5.3",
    "events": "^3.2.0",
    "formik": "^2.2.6",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "popper.js": "^1.16.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.3",
    "react-dom": "^17.0.1",
    "react-intl": "^5.13.5",
    "serialport": "^9.0.4"
  }
}
